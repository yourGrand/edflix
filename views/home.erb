<%= erb :"common/header" %>
<!-- HOME -->
<main>
  <h1>
    Welcome to Edflix where you can learn every course you want!
  </h1>

  <h2>Most popular courses</h2>
  <div class="padding">
    <% if @coursesSortedByRating.count > 0 %>
      <% @coursesSortedByRating.each do |course| %>
        <div class="courses-container">
          <div class="course-shadow">
            <img src=<%=h course.image %> class="course-img">
            <article class="course">
              <h3><%=h course.name %></h3>
              <p><%=h course.about %></p>
              <% if session[:logged_in] %>
                <div class="read-more">
                  <a href="course/<%=h course.id %>" target="_blank">More</a>
                </div>
              <% end %>
            </article>
          </div>
        </div>
      <% end %>
    <% else %>
      <p>The database is empty!</p>
    <% end %> 
  </div>

  <div>
    <% if @articles.count > 0 %>
      <h2>Featured Articles</h2>
      <% @articles.each do |article| %>
        <div class="article-container">
          <article class="article">
            <img src=<%=h article.image %>>
            <h2><%=h article.title %></h2>
            <p><%=h article.body %></p>
          </article>
        </div>
      <% end %>
    <% else %>
      <p>The database is empty!</p>
    <% end %>   
  </div>

</main>
<%= erb :"common/footer" %>
