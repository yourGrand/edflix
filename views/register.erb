<%= erb :"common/header" %>

<!-- REGISTER -->
  <main>
    <form method="post" action="/register" class="signup">
      <% if @form_was_submitted %>
        <% if @submission_error %>
          <p class="error">Please correct the errors below</p>
        <% else %>
          <p class="success">Success!</p>        
        <% end %>
      <% end %>
      
      <% if @username_error %>
        <p class="error"><%= @username_error %></p>
      <% end %>
      <input type="text" name="username" value="<%= h @username %>" placeholder="Username"/>
      
      
      <% if @email_error %>
        <p class="error"><%= @email_error %></p>
      <% end %>
      <input type="text" name="email" value="<%= h @email %>" placeholder="Email"/>

      <% if @password_error %>
        <p class="error"><%= @password_error %></p>
      <% end %>
      <input type="password" name="password" value="<%= h @password %>" placeholder="Password"/>

      <button type="submit">Submit</button>
    </form>
  </main>

<%= erb :"common/footer" %>