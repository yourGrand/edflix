<%= erb :"common/header" %>
  <!-- EDIT COURSE FORM -->
  <main>
    <div class="add-course-div">
      <h2>Edit course "<%=h @course.name %>"</h2>
      <% if @error %>
        <p class = "error"><%= @error %></p>
      <% elsif @success %>
        <p>Course was successfully edited</p>
      <% end %>
      <form class="add-course" method="post", action="/edit-course/<%=h @course.id %>">
        <label for="coursetitle">Course title:</label>
        <input type="text" id="coursetitle" name="coursetitle" placeholder="Course title" value="<%=h @course.name %>"/>
        <br/>

        <label for="about">Course description:</label>
        <br/>
        <textarea id="about" name="about" rows="10" cols="50" placeholder="Course description"><%=h @course.about %></textarea>
        <br/>

        <label for="courselink">Course link:</label>
        <input type="text" id="courselink" name="courselink" placeholder="Course link" value="<%=h @course.link %>"/>
        <br/>

        <label for="imgname">Image file name with an extension .png, .jpg or .jpeg:</label>
        <input type="text" id="imgname" name="imgname" placeholder="Image file name" value="<%=h @course_img %>"/>
        <br/>

        <label for="coursetime">Course duration:</label>
        <input type="text" id="coursetime" name="coursetime" placeholder="Course duration" value="<%=h @course.duration %>"/>
        <br/>

        <label for="coursepre">Course prerequisites:</label>
        <br/>
        <textarea id="coursepre" name="coursepre" rows="10" cols="50" placeholder="Course prerequisites"><%=h @course.pre %></textarea>
        <br/>

        <button type="submit">Edit course</button>
      </form>
    </div>
  </main>
<%= erb :"common/footer" %>