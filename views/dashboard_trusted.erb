<%= erb :"common/header" %>

<!-- TRUSTED DASHBOARD -->
<head>
    <style>

    table, th, td {
      border: 1px solid black;
      border-collapse: collapse;
      margin-right: 20px;
      margin-left: auto;
    }  
    th, td {
      padding: 5px;
      text-align: left;
    }
    h1 {
      margin-left: 20px;
    }

    .logout {
      text-align: right;
      color: red;
      margin-right: 50px;
    }

  </style>
</head>

<main>
  <h1>Welcome to the Edflix Trusted Course Provider Dashboard</h1>

  <table>
    <caption>User Information</caption>
    <tr>
      <th>Username:</th>
      <td><%= @dashUsername %></td>
    </tr>
    <tr>
      <th>Email Address:</th>
      <td><%= @dashEmail %></td>
    </tr>

  </table>

  <div class="buttons">
    <a href="/add_course" target = "_blank">Add course</a>
    <a href="/trusted_courses" class="button">Course Details</a>
  </div>
  <button onclick="location.href='/logout'">Log Out</button>
  <button onclick="window.open('/change_password', '_blank')">Reset Password</button>
  <button onclick="window.open('/change_email', '_blank')">Reset Email</button>
</main>

<%= erb :"common/footer" %>

